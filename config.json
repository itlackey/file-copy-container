{
  "drives": [
    {
      "name": "drive1",
      "path": "/path/to/drive1",
      "credentials": ".smbcredentials"
    },
    {
      "name": "drive2",
      "path": "/path/to/drive2",
      "credentials": ".smbcredentials"
    }
  ],
  "commands": [
    {
      "source": "/path/to/source/dir",
      "destination": "/path/to/drive1/destination/dir",
      "include": "*.txt",
      "exclude": "temp/*"
    },
    {
      "source": "/path/to/source/dir",
      "destination": "/path/to/drive2/destination/dir",
      "include": "*.jpg",
      "exclude": "temp/*"
    }
  ]
}
